<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="1" author="defuname">
        <createTable tableName="products">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="title" type="varchar(255)">
                <constraints nullable="false"/>
            </column>

            <column name="image_location" type="varchar(255)">
            </column>

            <column name="category_id" type="bigint"/>

            <column name="price" type="decimal">
                <constraints nullable="false"/>
            </column>

            <column name="quantity" type="integer" defaultValue="0">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="defuname">
        <createTable tableName="category">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="category_name" type="varchar(32)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="3" author="defuname">
        <addForeignKeyConstraint baseTableName="products"
                                 baseColumnNames="category_id"
                                 constraintName="fk_product_category"
                                 onDelete="SET NULL"
                                 onUpdate="SET NULL"
                                 referencedTableName="category"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>